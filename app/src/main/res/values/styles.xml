<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Base.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="GenericText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextStyle" parent="GenericText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DescriptionTextStyle" parent="GenericText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommentTextStyle" parent="GenericText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserDetailsTabStyle">
        <item name="android:background">@color/light_grey</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/UserDetailsTabTextAppeareance</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="UserDetailsTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
